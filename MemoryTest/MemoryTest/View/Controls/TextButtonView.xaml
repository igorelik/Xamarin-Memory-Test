<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryTest.View.Controls.TextButtonView">
  <Grid>
    <Frame x:Name="frameOutline" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
           BackgroundColor="{x:DynamicResource iCareBackground}"
           OutlineColor="{x:DynamicResource iCareBackground}"
           HasShadow="False" >
      <Label x:Name="lblText" Text="Button" VerticalOptions="Center" FontSize="18" TextColor="White" HorizontalOptions="CenterAndExpand"></Label>
    </Frame>
    <Frame IsVisible="False" BackgroundColor="Gray" Opacity="0.5" x:Name="DisabledOverlay" HasShadow="False"></Frame>
  </Grid>
</ContentView>